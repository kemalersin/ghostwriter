{{#foreach posts}}
    <li class="post-stub {{post_class}}" >
        <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">
            <h4 class="post-stub-title">{{title}}</h4>

            <time class="post-stub-date" datetime="{{published_at}}">{{date format="D MMMM YYYY"}} tarihinde yayınlandı.</time>

            {{#if featured}}
                <span class="post-stub-tag">Sabitlendi</span>
            {{/if}}
        </a>
    </li>
{{/foreach}}
